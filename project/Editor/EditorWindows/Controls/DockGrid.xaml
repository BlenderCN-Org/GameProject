<UserControl x:Class="Editor.EditorWindows.Controls.DockGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Editor.EditorWindows.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition x:Name="BorderHeight" Height="20"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Background="#FF232323" MouseMove="Border_MouseMove" PreviewMouseDown="Border_PreviewMouseDown"/>
        <Grid Grid.Row="1" x:Name="DockingGrid" Margin="0" Background="Transparent" AllowDrop="True">

        </Grid>
    </Grid>
</UserControl>
